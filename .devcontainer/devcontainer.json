{
	"name": "pgp-php",
	"image": "gitlab.oteacher.org:5001/oteacher/devops/image-hub/php/base-php-composer:8.1-fpm-alpine",
	"workspaceFolder": "/var/www/html",
	"customizations": {
		"vscode": {
			"settings": {
				"php.executablePath": "/usr/local/bin/php",
				"editor.suggest.snippetsPreventQuickSuggestions": false,
				"code-runner.executorMap": {
					// "javascript": "node",
					// "python": "python",
					// "perl": "perl",
					// "ruby": "C:\\Ruby23-x64\\bin\\ruby.exe",
					// "go": "go run",
					// "html": "\"C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe\"",
					// "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
					// "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
					"php": "/usr/local/bin/php"
				}
			},
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"hakcorp.php-awesome-snippets",
				"formulahendry.code-runner"
			]
		}
	},
	"mounts": [
		"source=${localWorkspaceFolder},target=/var/www/html,type=bind",
		"source=${localWorkspaceFolder}/.devcontainer/extensions,target=/root/.vscode-server/extensions,type=bind"
	],
